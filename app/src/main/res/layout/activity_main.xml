<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAdressName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adress_name" />

        <EditText
            android:id="@+id/textViewAdress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBkground"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:digits="0123456789."
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewPortName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/port_name" />

        <EditText
            android:id="@+id/textViewPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBkground"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:digits="0123456789"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/check_link" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="235dp"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>